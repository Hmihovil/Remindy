        <!--android:layout_marginEnd="4dp"-->
        <!--android:src="@drawable/icon_place"-->
        <!--android:tint="@color/gray_600"-->
        <!--/>-->

    <TextView
        android:id="@+id/item_place_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/item_place_map"
        android:layout_toStartOf="@id/item_place_map"
        android:layout_below="@id/item_place_category_icon"
        android:includeFontPadding="false"
        android:layout_marginTop="6dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:lines="2"
        android:ellipsize="end"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text_size_small"
        android:text="Example place address ..."
        />


</RelativeLayout>